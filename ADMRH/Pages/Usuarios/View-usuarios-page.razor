@page "/usuarios/view-user/{IdUsuario}"
@using ADMRH.Pages.Vacantes



<RadzenCard class="mt-5">
    <div class="row">
        <div class="col">
            <h1>Informacion general</h1>
        </div>
        <div class="col-sm-2">
            <button class="btn btn-success d-inline mt-1  float-right"><i class="fas fa-user-edit"></i></button>
            <button class="btn btn-warning d-inline mr-1 mt-1 float-right"><i class="fas fa-user-edit"></i></button>
        </div>
    </div>
    <EditForm Model="usuario">
         <DataAnnotationsValidator/>   
       <div class="row border-top">
        <div class="col-sm-2 mt-2 pr-1">
            <div class="img">

            </div>
        </div>
         <div class="col mt-2">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Cedula</label>
                                <InputText class="form-control" @bind-Value="usuario.Cedula" type="text"></InputText>
                                 <ValidationMessage For="@(()=> usuario.Cedula)"/>
                            </div>
                            <div class="form-group">
                                <label>Nombre</label>
                                <InputText class="form-control" @bind-Value="usuario.Nombre" type="text"></InputText>
                                 <ValidationMessage For="@(()=> usuario.Nombre)"/>
                            </div>
                            <div class="form-group">
                                <label>Apellido</label>
                                <InputText class="form-control" @bind-Value="usuario.Apellido" type="text"></InputText>
                                 <ValidationMessage For="@(()=> usuario.Apellido)"/>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                <label>Departamento</label>
                                <InputSelect class="form-control" @bind-Value="usuario.Departamento">
                                    <option value="Tecnologia">Tecnologia</option>
                                    <option value="Finanzas">Finanzas</option>
                                    <option value="Gestion Humana">Gestion Humana</option>
                                    <option value="Legal">Legal</option>
                                    <option value="Ventas">Ventas</option>
                                </InputSelect>
                                <ValidationMessage For="@(()=> usuario.Departamento)" />
                            </div>
                             </div>
                              <div class="col">
                            <div class="form-group">
                                <label>Rol</label>
                                <InputSelect class="form-control" @bind-Value="usuario.Rol">
                                    <option value="Administrador">Administrador</option>
                                    <option value="Analista">Analista de reclutamiento</option>
                                </InputSelect>
                                <ValidationMessage For="@(()=> usuario.Rol)" />
                            </div>
                        </div>
                             </div>
                           
                            <div class="form-group">
                                <label>Correo</label>
                            <InputText class="form-control" @bind-Value="usuario.Correo" type="text"></InputText>
                                 <ValidationMessage For="@(()=> usuario.Correo)"/>
                            </div>
                            <div class="form-group">
                                <label>Telefono</label>
                                <InputText class="form-control" @bind-Value="usuario.Telefono" type="text"></InputText>
                                 <ValidationMessage For="@(()=> usuario.Telefono)"/>
                            </div>
                        </div>
                    </div>
                    <div class="col pl-0 pr-0">
                         <div class="form-group">
                            <label>Direccion</label>
                            <InputTextArea @bind-Value="usuario.Direccion" class="form-control"></InputTextArea>
                            <ValidationMessage For="@(()=> usuario.Direccion)" />
                        </div>
                    </div>
                </div>
        <div class="col-sm-2" style="margin-top:34px">
            <RadzenCard>
                <h1 style="font-size:50px;" class="mb-0">34</h1>
                <label>Vacantes creadas</label>
            </RadzenCard>
            <RadzenCard class="mt-1">
                <h1 style="font-size:50px;" class="mb-0">34</h1>
                <label>Candidatos gestionados</label>
            </RadzenCard>
        </div>
    </div>
        </EditForm>
    

</RadzenCard>
<RadzenCard class="mt-4">
    <h2>Usuarios gestionados</h2>
    <div class="row border-top">
        <div class="col">
            
        </div>
    </div>
</RadzenCard>
<RadzenCard class="mt-4">
    <h2>Vacantes creadas</h2>
    <div class="row border-top">
        <div class="col pt-2">
            <Vacantes_table IdUsuario="@idUsuario"></Vacantes_table>
        </div>
    </div>
</RadzenCard>
 <style>
     .img {
         width: 100%;
         height: 310px;
         background-image: url(https://cdn-icons.flaticon.com/png/512/506/premium/506185.png?token=exp=1647107903~hmac=eecf2b16293b582d02802eef65ed8544);
         background-position: center;
         background-repeat: no-repeat;
         background-size: 100% 100%;
     }
 </style>
